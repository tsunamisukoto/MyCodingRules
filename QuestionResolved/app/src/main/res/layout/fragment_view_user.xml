<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mcr.lgss.questionresolved.Views.ViewUserFragment">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        tools:context="com.mcr.lgss.questionresolved.Views.ViewPerson"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="left|top">

        <ImageButton
            android:layout_margin="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle"
            android:id="@+id/btn_edit"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_gravity="right|bottom" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:id="@+id/lbl_id"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:id="@+id/lbl_name"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/lbl_id"
                android:layout_alignLeft="@+id/lbl_id"
                android:layout_alignStart="@+id/lbl_id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:id="@+id/lbl_description"
                android:layout_below="@+id/lbl_name"
                android:layout_alignLeft="@+id/lbl_name"
                android:layout_alignStart="@+id/lbl_name"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person not found"
                android:id="@+id/lbl_missing"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/lbl_description"
                android:visibility="invisible" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
